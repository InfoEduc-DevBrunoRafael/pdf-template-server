<%- include("../../css/ficha.ejs") %>
<%- include("../../css/common.ejs") %>
<% include("../utils.ejs") %> 
<style>
    #lista-atividades {
        border-spacing: 0;
    }

    tr, td, tbody, thead {
        break-inside: avoid;
    }

    #lista-atividades > tbody > tr > td, #lista-atividades > thead > tr > td {
        padding: 5px;
    }
</style>


<table class="table" id="lista-atividades">
    <thead style="display: table-row-group;">
        <tr>
            <td class="text-center">Data</td>
            <td class="text-center">Nº de Aulas</td>
            <td class="text-center">Resumo das Atividades</td>
            <td class="text-center" style="width: 20%;">Rubrica do(a) Professor(a)</td>
        </tr>
    </thead>
    <tbody>
        <% let totalAulas = 0; %>
        <% registros_aulas.forEach(atividade => { %>
            <tr>
                <td class="text-center" style="width: 10%">
                    <% const date = new Date(atividade.data) %>
                    <%= padWithZero(date.getDate()) + "/" + padWithZero(date.getMonth() + 1) %>
                </td>
                <td class="text-center" style="width: 10%;">
                    <%= atividade.qtd_aulas %>
                    <% totalAulas += (atividade.qtd_aulas) ? parseInt(atividade.qtd_aulas) : 0 %>
                </td>
                <td>
                    <% if(typeof atividade.resumo === 'string'){ %>
                        <%-include("../verificar_formatacao_2.ejs",{ text: atividade.resumo })  %>
                    <% } %>
                </td>
                <td class="text-center" style="width: 20%;">
                    
                </td>
            </tr> 
        <% }) %>
    </tbody>
    <tr>
        <td class="text-center" style="border: none;"><strong>Total: </strong></td>
        <td class="text-center" style="border-left: 1px solid;"><%= totalAulas %></td>
    </tr>
</table>
<style>
    .flex {
        display: flex;
    }
    .flex-column {
        flex-direction: column;
        flex-grow: 1;
    }
    .padding-top {
        padding-top: 90px;
    }
    .small-text {
        text-align: center;
        font-size: 12px;
    }
</style>
<div style="break-inside: avoid;">
    <div style="padding-top: 10px;">
        <div class="flex padding-top dont-break" style="gap: 10px;">
            <div class="flex flex-column" style="max-width: 49%;">
                <div class="text-line"></div>
                <div class="small-text"><strong>Assinatura da Coordenação Pedagógica</strong></div>
            </div>
            <div class="flex flex-column" style="max-width: 49%;">
                <div class="text-line"></div>
                <div class="small-text"><strong>Assinatura do Diretor(a)</strong></div>
            </div>
        </div>
    </div>
</div>