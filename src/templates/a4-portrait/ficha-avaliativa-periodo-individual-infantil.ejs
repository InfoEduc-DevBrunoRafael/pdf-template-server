<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="http://localhost:2000/assets/css/font.css">
    <%- include("css/common.ejs") %>
</head>

<body>
    <div id="container">
        <%- include("reusable/header-escola.ejs") %>
        <div class="flex flex-column small-gap">
            <div class="multicolumn">
                <b class="pad-right">Instituição de Ensino:</b>
                <div class="text-line"><%= nome_escola %></div>
            </div>
            <div class="flex">
                <div class="multicolumn">
                    <b class="pad-right">Prof (a):</b>
                    <div class="text-line"><%= nome_professor %> </div>
                </div>
                <div class="multicolumn">
                    <b class="pad-right">Ano Letivo:</b>
                    <div class="text-line"><%= ano_letivo %></div>
                </div>
            </div>
            <div class="flex">
                <div class="multicolumn">
                    <b class="pad-right">Aluno (a):</b>
                    <div class="text-line"><%= nome_aluno %></div>
                </div>
                <div class="multicolumn" style="width: 200px;">
                    <b class="pad-right">Turma:</b>
                    <div class="text-line"><%= nome_turma %></div>
                </div>
                <div class="multicolumn" style="width: 200px;">
                    <b class="pad-right">Turno:</b>
                    <div class="text-line"><%= nome_turno %></div>
                </div>
            </div>
        </div>
        <h1 class="page-title">FICHA AVALIATIVA</h1>
        <% const lines = 5 %>
        <% periodo_letivos.forEach(nome_periodo => { %>
        <div>
            <h3 class="text-center"><%= nome_periodo %></h3>
            <% for (let index = 0; index < lines; index++) { %>
            <div class="flex" style="break-inside: avoid;">
                <div class="text-line">

                </div>
            </div>
            <br>
            <br>
            <% } %>
        </div>
        <% }) %>
        <%- include("reusable/campo-assinatura-direcao.ejs") %>
    </div>
</body>

</html>